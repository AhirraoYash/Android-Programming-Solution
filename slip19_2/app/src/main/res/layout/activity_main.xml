<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TableRow>

            <TextView
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:text="Membership Form"
                android:textAlignment="center"
                android:textColor="#BD25C1"
                android:textSize="30dp" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/name"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:hint="Enter Name" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"

                android:text="Gender"
                android:textSize="25dp" />

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="m"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="f"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/other"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="other"
                    android:textSize="20dp" />

            </RadioGroup>
        </TableRow>

        <TableRow android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/weight"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:hint="Current Weight"
                android:inputType="number" />

            <EditText
                android:id="@+id/height"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:hint="Height"
                android:inputType="number" />

        </TableRow>

        <TableRow android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/gaol"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:hint="Gaol Weight"
                android:inputType="number" />

            <EditText
                android:id="@+id/age"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:hint="Age"
                android:inputType="number" />

        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/number"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:hint="Phone"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/address"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:hint="Address"
                android:inputType="textPostalAddress" />
        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_marginTop="20dp"
                android:text="I Have Read, understood and accepted membership rules" />
        </TableRow>

        <TableRow />
    </TableLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="105dp"
        android:layout_height="31dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="193dp"
        android:layout_marginBottom="67dp"
        android:background="#C000EC"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>